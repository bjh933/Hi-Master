<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e3d8"
    tools:context="com.example.a1.himaster.num10_Main">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="15dp">

        <RadioGroup
            android:id="@+id/radioGroup1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/radio0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="60dp"
                android:text="일정" />

            <RadioButton
                android:id="@+id/radio1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="60dp"
                android:text="할일" />

            <RadioButton
                android:id="@+id/radio2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="행사" />

        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scheduleText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="일정 : "
            android:textSize="25dp"/>

        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/todoEt"
            android:hint="내용을 입력해주세요"/>


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/scheduleMinText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="시간 : "
            android:textSize="25dp"/>

        <Button
            android:id="@+id/okButton01"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/b_test01"
            android:text="월"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>

        <Button
            android:id="@+id/okButton02"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/b_test01"
            android:text="화"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/okButton03"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/b_test01"
            android:text="수"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/okButton04"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/b_test01"
            android:text="목"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/> <Button
        android:id="@+id/okButton05"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@drawable/b_test01"
        android:text="금"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:textSize="20dp"/>
        <Button
            android:id="@+id/okButton06"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/b_test01"
            android:text="토"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>
        <Button
            android:id="@+id/okButton07"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@drawable/b_test01"
            android:text="일"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="100dp"
        android:orientation="horizontal">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="2dp"
            android:id="@+id/timeSpinner"
            android:entries="@array/timeSpinner"
            ></Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/hourSpinner"
            android:entries="@array/hourSpinner"
            ></Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/minSpinner"
            android:entries="@array/minSpinner"
            ></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/scheduleCountText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="반복 : "
            android:textSize="25dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/reSpinner"
            android:entries="@array/reSpinner"
            ></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/schedulePeriodText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="기간 : "
            android:textSize="25dp"/>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/yearStartSpinner"
            android:entries="@array/yearStartSpinner"
            ></Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/monthStartSpinner"
            android:entries="@array/monthStartSpinner"
            ></Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/dateStartSpinner"
            android:entries="@array/dateStartSpinner"
            ></Spinner>

        <TextView
            android:id="@+id/dText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="10dp"
            android:text=" ~ "
            android:textSize="20dp"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="105dp">

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:id="@+id/yearEndSpinner"
            android:entries="@array/yearEndSpinner"
            ></Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/monthEndSpinner"
            android:entries="@array/monthEndSpinner"
            ></Spinner>

        <Spinner
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:id="@+id/dateEndSpinner"
            android:entries="@array/dateEndSpinner"
            ></Spinner>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <TextView
            android:id="@+id/scheduleDesText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="목적지 : "
            android:textSize="25dp"/>

        <EditText
            android:layout_width="180dp"
            android:layout_height="50dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="5dp"
            android:id="@+id/positionEdit"
            android:hint="장소"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/j_searching"/>

        <Button
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/j_maps"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <TextView
            android:id="@+id/scheduleMemoText"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="10dp"
            android:text="메모 : "
            android:textSize="25dp" />

        <TextView
            android:id="@+id/scheMemoText"
            android:layout_width="250dp"
            android:layout_height="80dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/j_border"
            android:text="    내용을 입력해주세요" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/cancelBtn"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="취소"/>

        <Button
            android:id="@+id/okBtn"
            android:layout_marginLeft="80dp"
            android:layout_width="60dp"
            android:layout_height="wrap_content"
            android:text="완료"/>

        </LinearLayout>
</LinearLayout>
