<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6e3d8"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_gravity="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="98dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="HI! \nMASTER"
            android:textColor="#000000"
            android:textSize="35dp"
            android:textStyle="bold" />

        <ImageView
            android:id="@+id/bal"
            android:layout_width="41dp"
            android:layout_height="35dp"
            android:layout_marginTop="32dp"
            android:layout_gravity="center"
            android:src="@drawable/a_bal" />
    </LinearLayout>

    <ImageView
        android:id="@+id/hama"
        android:layout_width="165dp"
        android:layout_height="165dp"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"
        android:src="@drawable/a_hama" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="130dp"
        android:layout_marginTop="40dp"
        android:layout_gravity="center">

        <Button
            android:id="@+id/facebook"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/a_facebook"
            android:layout_gravity="center"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/google"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:background="@drawable/a_google"
            android:layout_margin="10dp" />

        <Button
            android:id="@+id/kakao"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:background="@drawable/a_kakao"
            android:layout_gravity="center"
            android:layout_margin="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/skip"
        android:layout_marginLeft="150dp"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:background="@drawable/a_skip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:layout_gravity="bottom">

        <TextView
            android:layout_marginBottom="5dp"
            android:text="  COPYRIGHT @ 1남3녀"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"/>

        <TextView
            android:layout_marginBottom="5dp"
            android:text="v 2.4.0  "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginLeft="210dp"
            android:textColor="#000000"/>
    </LinearLayout>


</LinearLayout>


