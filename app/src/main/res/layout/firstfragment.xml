<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F3F2EE">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

            <TextView
                android:layout_gravity="center"
                android:id="@+id/dateTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="adsfsdfdf"
                android:layout_marginLeft="25dp"
                />



            <ImageView
                android:layout_marginLeft="200dp"
                android:id="@+id/optMenuBtn"
                android:layout_width="40dp"
                android:layout_height="30dp"
                android:background="@drawable/optionmenu"/>

        </LinearLayout>



        <android.support.v7.widget.RecyclerView
            android:id="@+id/scheduleRv"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"></android.support.v7.widget.RecyclerView>


</LinearLayout>
