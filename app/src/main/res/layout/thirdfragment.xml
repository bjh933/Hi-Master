            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text = "화요일"
                android:id="@+id/twoTv"
                android:textSize="12dp"
                android:layout_marginLeft="30dp"
                android:layout_gravity="center"/>

            <ImageView
